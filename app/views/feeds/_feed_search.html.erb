<form class='feed-search' ng-submit='search(query)'>
  <div class="input-group">
    <input type="text" class="form-control" placeholder='Search feeds' ng-model='query'>
    <button type="button" class="close clear-search" aria-hidden="true" ng-click='query = ""; search("")' ng-hide='query === "" || query === undefined'>&times;</button>
    <span class="input-group-btn">
      <button class="btn btn-success" type="submit">
        <span class='glyphicon glyphicon-search'></span>
      </button>
    </span>
  </div><!-- /input-group -->
</form>