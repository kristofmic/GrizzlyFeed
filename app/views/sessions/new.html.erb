<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <h3 class='form-heading'>Log in</h3>  
  </div>
</div>

<div class='row'>
  <div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2'>
    <%= form_tag login_path, class: 'form-horizontal' do %>
      <div class='form-group'>
        <%= label_tag 'email', 'Email', class: 'control-label'%>
        <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'grrrr@grizzlyfeed.com', autofocus: true%>
      </div>
      <div class='form-group'>
        <%= label_tag 'password', 'Password', class: 'control-label'%>
        <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'I_Love_Hibernating!' %>
      </div>
      <div class='form-group'>
        <%= submit_tag 'Login', class: 'btn btn-success' %>
        <button id='forgot_password' class='btn btn-link' data-toggle="modal" data-target="#forgot_password_modal">Forgot password</button>
      </div>
    <% end %>
  </div>
</div>

<%= render partial: 'sessions/forgot_password_modal' %>
