<div class='row flash'>
<%= render 'layouts/errors', object: @user %>
</div>

<div class='row'>
  <div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2'>
    <h3 class='form-heading'>Join</h3>  
  </div>
</div>

<div class='row'>
  <div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2'>
    <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <%= f.label :email, class: 'control-label'%>
        <%= f.text_field :email, class: 'form-control', placeholder: 'grrrr@grizzlyfeed.com', autofocus: true %>
      </div>
      <div class='form-group'>
        <%= f.label :password, class: 'control-label'%>
        <%= f.password_field :password, class: 'form-control', placeholder: 'I_Love_Hibernating!' %>
      </div>
      <div class='form-group'>
        <%= f.label :password_confirmation, class: 'control-label'%>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'I_Love_Hibernating!' %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Sign up', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>