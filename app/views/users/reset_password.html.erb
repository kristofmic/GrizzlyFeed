<div class='row flash'>
<%= render 'layouts/errors', object: @user %>
</div>

<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <h3 class='form-heading'>Reset Password</h3>  
  </div>
</div>

<div class='row'>
  <div class='col-lg-6 col-lg-offset-3'>
    <%= form_for @user, url: update_password_path(params[:token]), html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <%= f.label :password, class: 'control-label'%>
        <%= f.password_field :password, class: 'form-control', placeholder: 'I_Love_Hibernating!' %>
      </div>
      <div class='form-group'>
        <%= f.label :password_confirmation, class: 'control-label'%>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'I_Love_Hibernating!' %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Reset', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>